@model NETCore_MVC_Water_Company.Web.Data.Entities.Bill

@{
    ViewData["Title"] = "EditBill";
}

<h2 style="color:white;">EditBill</h2>

<h4 style="color:white;">Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="WaterMeterId" />
            <input type="hidden" asp-for="FinalValue" />
            <input type="hidden" asp-for="MonthYear" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PaymentState" /> @Html.DisplayNameFor(model => model.PaymentState)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Consumption" class="control-label"></label>
                <input asp-for="Consumption" class="form-control" />
                <span asp-validation-for="Consumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.WaterMeterId" class="btn btn-default">Back to water meter details</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationCurrencyPartial");}
}