@model IEnumerable<NETCore_MVC_Water_Company.Web.Data.Entities.WaterMeter>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />

<h2 style="color:white;">Index</h2>

<div class="row" style="color:black;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Water meters</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalConsumption)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MeterState)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ZipCode)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalConsumption)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MeterState)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ZipCode)
                                </td>
                                <td>
                                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a>


                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.Id">Edit</a>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                                    }
                                    @if (User.IsInRole("Employee"))
                                    {
                                        <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.Id">Edit</a>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('#MyTable').DataTable();
            });

    </script>
}
