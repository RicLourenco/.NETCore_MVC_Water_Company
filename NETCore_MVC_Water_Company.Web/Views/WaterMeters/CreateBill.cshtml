@model NETCore_MVC_Water_Company.Web.Models.BillViewModel

@{
    ViewData["Title"] = "CreateBill";
}

<h2 style="color:white;">CreateBill</h2>

<h4 style="color:white;">Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WaterMeterId" />

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PaymentState" /> @Html.DisplayNameFor(model => model.PaymentState)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Consumption" class="control-label"></label>
                <input asp-for="Consumption" class="form-control" />
                <span asp-validation-for="Consumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthYear" class="control-label"></label>
                <input asp-for="MonthYear" class="form-control" />
                <span asp-validation-for="MonthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Details" asp-route-id="@Model.WaterMeterId" class="btn btn-primary">Back to water meter details</a>
</div>

@section scripts{

}
